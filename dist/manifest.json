{
    "manifest_version": 3,
    "name": "GPTCopy",
    "version": "1.0",
    "description": "Copy ChatGPT equations to Word on click",
    "permissions": [
      "clipboardWrite",
      "tabs",
      "activeTab",
      "storage"
    ],
    "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "action": {
       "default_icon": {
         "16": "logo.png",
         "48": "logo.png"
       },
       "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
